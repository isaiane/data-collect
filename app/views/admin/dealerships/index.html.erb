<div class="container-fluid page-header" id="page-title">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <h4 class="page-title">
        <i class="fa fa-university"></i>
        <%= link_to @account.name, @account %>
        <span class="fa fa-chevron-right"></span>
        <%= t('dealership').pluralize(I18n.locale.to_sym) %>
        </h4>
      </div>
      <div class="col-xs-6">
        <% unless @account.incomplete? %><a href="#options-model" class="auto-more call-modal"><i class="fa fa-plus"></i></a><% end %>
        <% if @account.favorite %>
          <%= link_to account_path(@account, "account[favorite]" => false), method: :put, class: "auto-favorite active" do %>
            <i class="fa"></i>
          <% end %>
        <% else %>
        <%= link_to account_path(@account, "account[favorite]" => true), method: :put, class: "auto-favorite" do %>
            <i class="fa"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "admin/accounts/shared" %>

<section id="dealerships" class="container-fluid listing">
  <div class="container">
    <div class="row">
    <div class="col-xs-12">
      <div class="ctrls">
        <%= form_tag account_dealerships_path(@account), id: "filter-search", class: "filter", method: "GET" do %>
          <span class="fa fa-search"></span>
          <%= text_field_tag :search, params[:search], autocomplete: "off", :placeholder => t('form.search'), class:"form-control ng-pristine ng-valid ng-touched" %>
          <%= hidden_field_tag :sort, params[:sort] %>
          <%= hidden_field_tag :order, params[:order] %>
        <% end %>
      </div>
      <div class="grid grid-list">
        <div class="grid-head">
          <ul>
            <li style="width:30%"><a data-sort="name" data-order="desc"><%= t "form.name" %></a></li>
            <li style="width:40%"></li>
            <li style="width:15%"><span><%= t "form.last_update" %></span></li>
            <li style="width:15%"></li>
          </ul>
        </div>
        <div id="item-list">
          <%= render "dealerships" %>
        </div>
      </div>
    </div>
    </div>
  </div>
</section>

<div class="overlay admin">
  <div class="dark-side"></div>
  <% unless @account.incomplete? %>
    <div id="options-model" class="modal options-modal">
      <%= render "admin/accounts/options" %>
    </div>
  <% end %>
</div>