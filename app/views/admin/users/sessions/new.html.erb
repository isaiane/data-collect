<h3><%= t "devise.title.login" %></h3>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:id => "form_login", class: "form"}) do |f| %>
	<% if notice %>
		<div id="toast-container">
			<div class="toast toast-success">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<%= notice.html_safe %>
			</div>
		</div>
	<% end %>
	<% if alert %>
		<div id="toast-container">
			<div class="toast toast-warning">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<%= alert.html_safe %>
			</div>
		</div>
	<% end %>
  <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
  <%= f.password_field :password, autocomplete: "off", placeholder: "Senha" %>
  <%= button_tag(type: 'submit', class: "btn btn-primary btn-block btn-login") do%>
   Login
  <% end %>
<% end %>
<div class="login-bottom-links">
<%= render "admin/users/shared/links" %>
</div>

